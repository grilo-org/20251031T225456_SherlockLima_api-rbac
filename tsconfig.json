{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@*": ["./*"]
    },
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types", "src/@types", ],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}